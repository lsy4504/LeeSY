<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>home</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>param1</param-name>
    <param-value>paramValue1</param-value>
  </context-param>
  <context-param>
    <param-name>contentFolder</param-name>
    <param-value>d:/contents</param-value>
  </context-param>
  
  <filter>
    <filter-name>CharterEncodingFilter</filter-name>
    <filter-class>kr.or.ddit.filter.CharterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
 
  <filter>
    <filter-name>FileUploadCheckFilter</filter-name>
    <filter-class>kr.or.ddit.filter.FileUploadCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FileUploadCheckFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>FrontController</servlet-name>
  	<servlet-class>kr.or.ddit.common.controller.FrontController</servlet-class>
  	<init-param>
  	<param-name>basePackage</param-name>
  	<param-value>kr.or.ddit</param-value>
  	</init-param>
  	 <init-param>
      <param-name>prefix</param-name>
      <param-value>/WEB-INF/views/</param-value>
    </init-param>
    <init-param>
      <param-name>suffix</param-name>
      <param-value>.jsp</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FrontController</servlet-name>
  	<url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  
</web-app>